  font-family: fnt-theme;
  letter-spacing: 2px;
  margin: 0;
  padding: 0.6em;
}

.search-window {
  padding-left: 5vw;
  padding-right: 5vw;
}
.button {
  display: inline-block;
  border-radius: 4px;
  background-color: #f4511e;
  border: none;
  color: #fff;
  text-align: center;
  font-size: 2em;
  padding: 20px;
  width: 15vw;
  transition: all 0.5s;
  cursor: pointer;
  margin-top: 20px;
}
.button span {
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 0.5s;
}
.button span:after {
  content: '»';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.5s;
}
.button:hover span,
padding-right 25px,
.button:hover span:after {
  opacity: 1;
  right: 0;
}
.backgroundimg {
  background: url("http://i.imgur.com/JZCrHDF.jpg") no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  height: 100%;
  margin-top: -20%;
}
.bread {
  color: #000;
  text-shadow: 0 0 5px #39ff14, 0 0 10px #39ff14, 0 0 20px #39ff14, 0 0 30px #39ff14, 0 0 40px #39ff14;
  background-color: rgba(14,23,23,0.9);
  border-radius: 15px 50px 30px 5px;
  width: 80%;
  margin-left: 10%;
  padding: 1.8%;
}
.bild {
  border-radius: 15px 50px 30px 5px;
}

